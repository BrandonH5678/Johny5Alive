{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://johny5alive.local/schemas/claude_max_task.schema.json",
  "title": "Claude Max Task",
  "description": "Task schema for Claude Max autonomous processing with human approval gate",
  "type": "object",
  "required": ["id", "type", "deliverables"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique task identifier"
    },
    "type": {
      "type": "string",
      "description": "Task type/category for approval grouping",
      "enum": [
        "analysis",
        "sherlock_composite",
        "research",
        "code_authoring",
        "validation",
        "synthesis"
      ]
    },
    "category": {
      "type": "string",
      "description": "Human-readable category for grouping in approval UI (synonymous with type)"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "normal", "high", "urgent"],
      "default": "normal"
    },
    "estimated_duration_hours": {
      "type": "number",
      "description": "Estimated processing duration in hours",
      "minimum": 0,
      "maximum": 24
    },
    "requires_human_approval": {
      "type": "boolean",
      "description": "Whether task requires explicit human approval before processing",
      "default": true
    },
    "approval_status": {
      "type": "string",
      "enum": ["pending", "approved", "rejected", "processing", "completed"],
      "default": "pending"
    },
    "approval_timestamp": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp of approval"
    },
    "approved_by": {
      "type": ["string", "null"],
      "description": "User who approved the task"
    },
    "checkpoint_interval_minutes": {
      "type": "integer",
      "description": "How often to save checkpoints during long-running tasks",
      "minimum": 5,
      "maximum": 120,
      "default": 30
    },
    "inputs": {
      "type": "array",
      "description": "Input files or data sources",
      "items": {
        "type": "string"
      }
    },
    "deliverables": {
      "type": "array",
      "description": "Expected output files",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "constraints": {
      "type": "object",
      "description": "Task constraints and parameters",
      "properties": {
        "max_tokens": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 200000
        },
        "style": {
          "type": "string",
          "enum": ["research", "technical", "conversational", "formal"]
        },
        "citations": {
          "type": "boolean",
          "description": "Whether to include citations"
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Human-readable notes about the task"
    },
    "retrieval_queries": {
      "type": "array",
      "description": "Queries for hybrid retrieval (if applicable)",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "source_system": {
          "type": "string",
          "description": "System that created the task (sherlock, squirt, j5a)"
        },
        "package_id": {
          "type": ["integer", "null"],
          "description": "Sherlock package ID if from targeting officer"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
